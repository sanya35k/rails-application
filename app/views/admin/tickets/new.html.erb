<div>
  <h1>New ticket</h1>
  <h3>Train: #<%= @train.number %></h3>
  <h4>Route: <%= @train.route.title %></h4>
  <h4>Stations list:</h4>
  <table class="center">
    <thead>
      <tr>
        <td>Station</td>
        <td width="150px">Departure/arrival time</td>
      </tr>
    </thead>
    <tbody>
      <% @train.route.railway_stations.ordered.each do |station| %>
      <tr>
        <td>
          <%= station.title %>
        </td>
        <td>
          <%= station.departure_time_in(@train.route) %>/<%= station.arrival_time_in(@train.route) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h3>Ticket info</h3>
  <% if @ticket.errors.present? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this carriage from being saved:</h2>

      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render 'form' %>
</div>

