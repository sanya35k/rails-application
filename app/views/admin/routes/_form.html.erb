<%= form_with(model: [:admin, route], html: { style: "display: #{hidden ? 'none' : 'block'}",\
                                              id: "edit_route_#{route.id}" }) do |form| %>
  <% if route.errors.any? %>
    <%= render 'common/errors' %>
  <% end %>

  <div class="field">
    <%= form.label t('.title') %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :station %>
    <%= form.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: route.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>


