<% if @route.trains.present? %>
  <p>List of trains on this route:</p>
  <ul>
    <% @route.trains.each do | train | %>
      <li><%= train.number %></li>
    <% end %>
  </ul>
<% else %>
  <p>No trains on this route!</p>
<% end %>

<% if @route.railway_stations.present? %>
  <p>List of stations on this route:</p>
  <ul>
    <% @route.railway_stations.each do | railway_station | %>
      <li><%= railway_station.title %></li>
    <% end %>
  </ul>
<% else %>
  <p>No stations on this route!</p>
<% end %>

