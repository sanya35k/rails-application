<p style="color: green"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<% if @train.current_station.present? %>
  <p>
  <h4>Current_station: <%= @train.current_station.title %></h4>
  </p>
<% else %>
  <p>Train is on it's way.</p>
<% end %>

<% if @train.route.present? %>
  <p>
  <h4>Route: <%= @train.route.title %></h4>
  </p>
<% else %>
  <p>Route not assigned!</p>
<% end %>

<p>
<h4>Carriages</h4>
<ul>
  <% @train.carriages.each do |carriage| %>
    <li>
      <%= link_to "#{carriage.number} - #{carriage.type}", carriage_path(carriage) %>
    </li>
  <% end %>
</ul>
</p>

<%= link_to "Update", edit_train_path(@train) %> |
<%= link_to "Back", trains_path %>
